{
  "printWidth": 80,
  "useTabs": false,
  "trailingComma": "all",
  "semi": true,
  "endOfLine": "lf",
  "plugins": ["prettier-plugin-astro"],
  "overrides": [
    {
      "files": "*.astro",
      "options": {
        "parser": "astro"
      }
    },
    {
      "files": ["*.astro", "*.*ts", "*.tsx", "*.*js", "*.jsx"],
      "options": {
        "tabWidth": 4,
        "singleQuote": true
      }
    }
  ]
}
